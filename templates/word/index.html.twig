{% extends 'base.html.twig' %}

{% block title %}Word index{% endblock %}

{% block body %}
    <h1>Word index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>JapanTranslate</th>
                <th>FrenchTranslate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for word in words %}
            <tr>
                <td>{{ word.id }}</td>
                <td>{{ word.japanTranslate }}</td>
                <td>{{ word.frenchTranslate }}</td>
                <td>
                    <a href="{{ path('app_word_show', {'id': word.id}) }}">show</a>
                    <a href="{{ path('app_word_edit', {'id': word.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_word_new') }}">Create new</a>
{% endblock %}
