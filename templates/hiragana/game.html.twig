{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}


{% block body %}
  <a href="{{ path('home') }}">Home</a>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      {{ form_start(form) }}
      {{ form_widget(form) }}
      {{ form_end(form) }}

      <input type="hidden" value="Get Hiragana" id="get-hiragana">
      <div id="hiragana-block" hidden>
        <h1 class="display-1" id="roomaji-show" hidden></h1>
        <h1 class="display-1" id="hiragana-show" hidden></h1>
        <figure id="hiragana-listen" hidden>
          <figcaption>Listen Hiragana</figcaption>
          <audio controls src="#">
            <a href="#"> Download audio </a>
          </audio>
        </figure>
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>
{% endblock %}

{% block javascripts %}
  <input type="hidden" value="{{ path('hiragana-get') }}" id="hiragana-get-route">
  <script src="{{ asset('assets/js/get-hiragana.js') }}">
  </script>
{% endblock %}