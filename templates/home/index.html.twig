{% extends 'base.html.twig' %}
{% block body %}
  {% if words is not null %}
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6 text-center display-box">
        <h1>Mots du jour</h1>
        {% for word in words %}
          {{ word.frenchTranslate }} : {{ word.japanTranslate }}<br>
        {% endfor %}
      </div>
      <div class="col-md-3"></div>
    </div>
  {% else %}
    Aucun mots aujourd'hui
  {% endif %}
{% endblock %}